// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Author {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  posts     Post[]
  ratings   Rating[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Post {
  id         Int      @id @default(autoincrement())
  url        String   @unique
  embedHtml  String
  author     Author   @relation(fields: [authorName], references: [username])
  authorName String
  Rating     Rating[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

model Rating {
  id         Int      @id @default(autoincrement())
  author     Author   @relation(fields: [authorName], references: [username])
  authorName String
  post       Post     @relation(fields: [postUrl], references: [url])
  postUrl    String
  cd         Int
  sa         Int
  cmp        Int
  hue        Int
  edit       Int
  nar        Int
  cookieId   String
  createdAt  DateTime
}
